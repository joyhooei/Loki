<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="interfaceJson" extends="json-default">
		<action name="iau"
			class="com.sltunion.cloudy.web.action.interfaces.IAUReportAction"
			method="iaureport">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>

		<action name="pps"
			class="com.sltunion.cloudy.web.action.interfaces.PopadsAction"
			method="pullpopads">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
	</package>

	<package name="interfacepage" extends="struts-default"
		namespace="/">
		<global-results>
			<result name="input">/timeout.jsp</result>
			<result name="error">/error.jsp</result>
			<result name="timeout">/timeout.jsp</result>
		</global-results>
		
		<action name="hpl"
			class="com.sltunion.cloudy.web.action.interfaces.HomepagelockAction"
			method="pullhomepageurl">
			<result name="success">/dif/hpl.jsp</result>
		</action>
		
		<action name="cfd"
			class="com.sltunion.cloudy.web.action.interfaces.DriverDownAction"
			method="pullMultiurl">
			<result name="success">/dif/hpl.jsp</result>
		</action>
		
		<action name="cff"
			class="com.sltunion.cloudy.web.action.interfaces.DriverDownAction"
			method="pullDriver">
			<result name="success">/dif/hpl.jsp</result>
		</action>
		
		<action name="cfs"
			class="com.sltunion.cloudy.web.action.interfaces.ConfiginiAction"
			method="pullSwitch">
			<result name="success">/dif/cfs.jsp</result>
		</action>
		
		<action name="cfr"
			class="com.sltunion.cloudy.web.action.interfaces.ConfiginiAction"
			method="pullrecommend">
			<result name="success">/dif/cfr.jsp</result>
		</action>
		
		<action name="cfm"
			class="com.sltunion.cloudy.web.action.interfaces.ConfiginiAction"
			method="pullmini">
			<result name="success">/dif/cfi.jsp</result>
		</action>
	</package>
</struts>
